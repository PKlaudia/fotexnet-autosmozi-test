        "/api/vetitesek/search": {
            "get": {
                "tags": [
                    "Vetitesek"
                ],
                "summary": "Search for screenings (vetitesek) by multiple parameters",
                "description": "This endpoint allows you to search for screenings based on time, film ID, available seats, and film title.",
                "operationId": "746519ccefa31bfdde7d53848f88da9c",
                "parameters": [
                    {
                        "name": "time",
                        "in": "query",
                        "description": "The time of the screening you want to search for. Use together with time_condition to filter.",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date-time"
                        }
                    },
                    {
                        "name": "time_condition",
                        "in": "query",
                        "description": "Specify how to compare the time: 'before' to get screenings before the given time, 'after' to get screenings after the given time, or 'equal' to match exactly the given time. Default is 'equal'.",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "equal",
                            "enum": [
                                "before",
                                "after",
                                "equal"
                            ]
                        }
                    },
                    {
                        "name": "film_id",
                        "in": "query",
                        "description": "Filter screenings by the film's ID.",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "min_available_seats",
                        "in": "query",
                        "description": "Filter screenings by the minimum number of available seats. Only screenings with at least the specified number of available seats will be returned.",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "film_title",
                        "in": "query",
                        "description": "Search screenings by the film's title. Use partial matching with LIKE.",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully retrieved screenings matching the provided filters",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "time": {
                                                "type": "string",
                                                "format": "date-time",
                                                "example": "2025-03-27 19:00:00"
                                            },
                                            "available_seats": {
                                                "type": "integer",
                                                "example": 50
                                            },
                                            "film_id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "created_at": {
                                                "type": "string",
                                                "format": "date-time",
                                                "example": "2025-03-27T10:00:00.000000Z"
                                            },
                                            "updated_at": {
                                                "type": "string",
                                                "format": "date-time",
                                                "example": "2025-03-27T10:00:00.000000Z"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request. Invalid request parameters.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Invalid request parameters"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "No screenings found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "No screenings found for given parameters"
